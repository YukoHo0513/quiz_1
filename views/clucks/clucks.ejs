<%- include('../partials/header.ejs') %>

  <% if (username) {%>

    <div class="container">
      <form action="/clucks" method="POST">
        <div class="mb-3">
          <label for="content" class="form-label">Content</label>
          <textarea name="content" class="form-control" id="content" rows="3"></textarea>
        </div>
        <div class="mb-3">
          <label for="imageUrl" class="form-label">Image Url</label>
          <input name="imageUrl" type="text" class="form-control" id="imageUrl"
            placeholder="https://i.imgur.com/qM6KaEy.gifv">
        </div>
        <div class="d-flex justify-content-end">
          <button type="submit" class="btn btn-outline-primary">Cluck!</button>
        </div>
      </form>
    </div>
    <% } else { %>
      <div class="container">
        <h2>Welcome to Cluckr!</h2>
        <div>Please go to a Sign in page first to enter your username</div>
      </div>
      <% } %>



        <%- include('../partials/footer.ejs') %>